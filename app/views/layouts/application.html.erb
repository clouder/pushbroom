<!DOCTYPE html>
<html>
<head>
  <title>pushbroom</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-26808638-2']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
</head>
<body>
<% flash.each do |k,v| %>
<div class="flash <%= k %>"><%= v %></div>
<% end %>
<div class="container_16">
	<div class="grid_16" id="header"><h1><%= link_to 'pushbroom', root_url %></h1></div>
	<% if @user %>
		<%= link_to 'sign out', logout_url, :id => 'logout' %>
	<% end %>
	<div id="<%= controller.controller_name %>">
		<%= yield %>
	</div>
	<div class="grid_16" id="footer">
		<ul class="pipe-menu">
			<li><%= link_to 'GitHub', 'https://github.com/clouder' %></li>
			<li><%= link_to 'Twitter', 'https://twitter.com/#!/cloudernew' %></li>
			<li><%= link_to 'Google+', 'https://plus.google.com/117082077242742718254' %></li>
			<li><%= link_to 'Facebook', 'https://www.facebook.com/cloudernew' %></li>
		</ul>
	</div>
</div>
</body>
</html>
